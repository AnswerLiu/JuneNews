/* pages/user/user.wxss */
#header{
  width: 100%;
  height: 200rpx;
  border-bottom: solid 1rpx #ccc;
}
#header .user{
  float: left;
  width: 500rpx;
  height: 170rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
}
#header .user .head{
  float: left;
  width: 160rpx;
  height: 160rpx;
}
#header .user .info{
  float: left;
  width: 320rpx;
  height: 160rpx;
}
#header .user .info .nickname{
  float: left;
  width: 320rpx;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
  color: #222222;
}
#header .user .info .userinfo{
  float: left;
  width: 320rpx;
  height: 80rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #929CA4;
  padding-left: 20rpx;
}
#header .site{
  float: left;
  width: 200rpx;
  height: 100rpx;
}
#header .site .btn{
  margin-top: 70rpx;
}
#activity{
  width: 100%;
  height: 120rpx;
  border-bottom: solid 1rpx #ccc;
}
#activity .follow{
  float: left;
  width: 340rpx;
  height: 120rpx;
  padding-left: 30rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #222;
}
#activity .border{
  float: left;
  width: 5rpx;
  height: 80rpx;
  border-right: solid 1rpx #ccc;
  position: relative;
  top: 20rpx;
  bottom: 20rpx;
}
#activity .fans{
  float: left;
  width: 340rpx;
  height: 120rpx;
  padding-right: 30rpx;
  text-align: center;
  line-height: 120rpx;
  font-size: 30rpx;
  color: #222;
}
.favorite{
  width: 100%;
  height: 100rpx;
  border-bottom: solid 1rpx #ccc;
  box-shadow: 0rpx 10rpx 4rpx #F3F6F8;
}
.favorite .collect{
  float: left;
  width: 300rpx;
  height: 93rpx;
  padding-left: 30rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  text-align: right;
}
.favorite .gap{
  float: left;
  width: 80rpx;
  height: 100rpx;
}
.favorite .comment{
  float: left;
  width: 300rpx;
  height: 93rpx;
  padding-right: 30rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}
.active{
  color: #119CEF;
}
/* 内容区 */
#content{
  width: 100%;
  height: 1000rpx;
  white-space: nowrap;
  overflow: hidden;
}
#content swiper{
  width: 100%;
  height: 100%;
}
#content .cont-list{
  width:690rpx;
  height: 100%;
  padding:0rpx 30rpx;
}
#content .collect-cont{
  display: inline-block;
  width: 690rpx;
  height: 100%;
  white-space: normal;
}
#content .comment-cont{
  display: inline-block;
  width: 690rpx;
  height: 100%;
  white-space: normal;
}