/* pages/home/home.wxss */
#header{
  height: 90rpx;
  border-bottom: solid 1rpx #e8e8e8;
}
#header .search{
  width: 90rpx;
  height: 90rpx;
  padding-right: 5rpx;
  display: flex; /* 弹性布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
#header .channels{
  width: 555rpx;
  height: 90rpx;
  padding-right: 5rpx;
  white-space: nowrap; /*不换行*/
}
#header .channels view{
  display: inline-block; /* 定义行内元素*/
  width: 60rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin-right: 32rpx;
  font-size: 28rpx;
  font-family: microsoft yahei;
}
#header .channels .active{
  width: 60rpx;
  color: #119CEF;
  border-bottom: solid 6rpx #119CEF;
}
#header .plus{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-left: solid 1rpx #ddd;
  box-shadow: -2rpx 0rpx 6rpx #ddd;
}

/* 内容区 */
#content{
  width: 100%;
}
/* 轮播图 */
#content .carousel{
  width: 690rpx;
  height: 300rpx;
  padding: 10rpx 30rpx;
}
#content swiper{
  height: 100%;
}
.news-list{
  width: 690rpx;
  height: 100%;
  padding: 0rpx 30rpx;
}
.news-list .item{
  min-height: 80rpx;
  border-bottom: solid 1rpx #e8e8e8;
  box-shadow: -2rpx 0rpx 4rpx #e8e8e8;
  padding: 30rpx 0rpx;
}
.news-list .item .title{
  font-size: 36rpx;
}
.news-list .item .media{
  font-size: 23rpx;
  color: #999;
  padding-top: 30rpx;
}

/* 隐藏滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

/* 遮罩区 */
#zhezhao{
  width: 100%;
  height: 100%;
  position: absolute;   /* 绝对定位 */
  left: 0rpx;
  top:0rpx;
  background-color: white;
}
#zhezhao .close{
  padding-top: 35rpx;
  padding-left: 30rpx;
}
#zhezhao .mine-channels{
  padding-top: 30rpx;
  padding-left: 30rpx;
}
.title{
  padding-bottom: 30rpx;
}
.title .b-title{
  font-size: 40rpx;
  font-weight: bold;
}
.title .s-title{
  font-size: 30rpx;
  color: #d4d4d4;
}
.channels .item{
  width: 160rpx;
  height: 80rpx;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #f5f5f5;
}
.channels .item .channels-img{
  float: right;
}
#zhezhao .other-channels{
  float: left;
  padding-top: 40rpx;
  padding-left: 30rpx;
}